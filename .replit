entrypoint = "index.js"
modules = ["nodejs-22"]
hidden = [".config", "package-lock.json"]

[gitHubImport]
requiredFiles = [".replit", "replit.nix", "package.json", "package-lock.json"]

[nix]
channel = "stable-24_11"
packages = ["killall"]

[deployment]
run = ["node", "index.js"]
deploymentTarget = "autoscale"
ignorePorts = false

[agent]
expertMode = true

[[ports]]
localPort = 3000
externalPort = 3000

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 9229
externalPort = 80

[userenv]

[userenv.shared]
SUPABASE_HOST = "db.oyyosqfzvzojjndvwyql.supabase.co"
SUPABASE_PORT = "5432"
SUPABASE_USER = "postgres.oyyosqfzvzojjndvwyql"
SUPABASE_DB = "postgres"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Frontend"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "API"

[[workflows.workflow]]
name = "Frontend"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx nx serve frontend"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow]]
name = "API"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx nx serve api"
waitForPort = 3000

[workflows.workflow.metadata]
outputType = "console"
